<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainmenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical">

            <Button
                android:onClick="sortByDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:text="Sort by Date"
                android:textColor="@android:color/black"
                android:singleLine="true"/>
            <Button
                android:onClick="sortByReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:text="Sort by Rating"
                android:textColor="@android:color/black"
                android:singleLine="true"/>
            <Button
                android:onClick="sortByDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:text="Sort by Distance"
                android:textColor="@android:color/black"
                android:singleLine="true"/>
            <Button
                android:onClick="sortAlphabeticallyByDishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:text="Sort by Dish Name"
                android:textColor="@android:color/black"
                android:singleLine="true"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:text="Map"
                android:textColor="@android:color/black"
                android:singleLine="true"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>